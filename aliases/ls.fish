################
# Listing stuff#
################

# Normal listing
alias l="exa -F --icons --group-directories-first"
alias ls="exa -F --icons --group-directories-first"

# All listing (show stuff hidden from you)
alias la="exa -aF --icons --group-directories-first"

# Long listing
alias ll="exa -lhF --icons --git --group-directories-first"
# -h shows headers

# Recursive listing
alias lr="exa -RF --icons --group-directories-first"

# Tree listing
alias lt="exa -TF --icons --group-directories-first"

# Directory listing
alias ld="exa -DF --icons --group-directories-first"

# -F displays type indicator by file names
# folder/ executable*
